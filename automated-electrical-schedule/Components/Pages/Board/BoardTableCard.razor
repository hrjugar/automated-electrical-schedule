<div class="board-table-card">
    <div class="board-table-card-header">
        <h6>Circuits</h6>
        <button class="btn-primary text-sm">Add</button>
    </div>

    <div class="board-table">
        <div class="board-table-header">
            <p class="board-table-head cell-sticky cell-sticky--left">No.</p>
            <p class="board-table-head">Load Description</p>
            <p class="board-table-head">Qty</p>
            <p class="board-table-head">VA</p>
            <p class="board-table-head">Voltage</p>
            <p class="board-table-head">D.F.</p>
            <p class="board-table-head">Ampere Load</p>

            <div class="separator"></div>

            <p class="board-table-head-group board-table-head-group--one">Circuit Protection</p>
            <p class="board-table-head-group-item">AT</p>
            <p class="board-table-head-group-item">AF (or more)</p>
            <p class="board-table-head-group-item">Phase</p>
            <p class="board-table-head-group-item">Pole</p>
            <p class="board-table-head-group-item">Length</p>
            <p class="board-table-head-group-item">VD</p>
            <p class="board-table-head-group-item">Type</p>

            <div class="separator"></div>

            <p class="board-table-head-group board-table-head-group--two">Conductor Size</p>
            <p class="board-table-head-group-item">Sets</p>
            <p class="board-table-head-group-item">Phase+Neutral</p>
            <p class="board-table-head-group-item">Ground</p>
            <p class="board-table-head-group-item">Raceway</p>
        </div>

        <div class="board-table-body">
            @for (var i = 1; i <= 10; i++)
            {
                <div class="board-table-row">
                    <p class="cell-sticky cell-sticky--left">@i</p>

                    <p>Bedroom Lighting</p>
                    <p>10</p>
                    <p>1000</p>
                    <p>230</p>
                    <p>100%</p>
                    <p>4.3478</p>

                    <div class="separator"></div>

                    <p>15</p>
                    <p>50</p>
                    <p>1</p>
                    <p>2</p>
                    <p>50</p>
                    <p>1.24%</p>
                    <p>MCB</p>

                    <div class="separator"></div>

                    <p>1</p>
                    <p>2-2.0mm² TW Cu</p>
                    <p>1-3.5mm² TW Cu</p>
                    <p>20mm PVC</p>
                </div>
            }
        </div>

        <div class="board-table-footer">
            <p class="cell-sticky cell-sticky--left">Total</p>
            <p></p>
            <p></p>
            <p>3000</p>
            <p>230</p>
            <p></p>
            <p>13.0435</p>

            <div class="separator"></div>

            <p>20</p>
            <p>50</p>
            <p>1</p>
            <p>2</p>
            <p>35</p>
            <p>1.28%</p>
            <p></p>

            <div class="separator"></div>

            <p></p>
            <p></p>
            <p></p>
            <p></p>
        </div>
    </div>
</div>


@if (ChildContent == null)
{
    <GenericTooltipWrapper 
        Title="Information Area" 
        Description="View more details such as references from PEC Part 1 2017 and definitions" 
        Placement="@TooltipPlacement"
    >
        <svg class="info-btn" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" @onclick="OnClick">
            <path fill="currentColor" d="M10.492 8.91A.5.5 0 0 0 9.5 9v4.502l.008.09a.5.5 0 0 0 .992-.09V9zm.307-2.16a.75.75 0 1 0-1.5 0a.75.75 0 0 0 1.5 0M18 10a8 8 0 1 0-16 0a8 8 0 0 0 16 0M3 10a7 7 0 1 1 14 0a7 7 0 0 1-14 0"/>
        </svg>
    </GenericTooltipWrapper>
}
else
{
    <TooltipWrapper Placement="TooltipPlacement">
        <ElementContent>
            <svg class="info-btn" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" @onclick="OnClick">
                <path fill="currentColor" d="M10.492 8.91A.5.5 0 0 0 9.5 9v4.502l.008.09a.5.5 0 0 0 .992-.09V9zm.307-2.16a.75.75 0 1 0-1.5 0a.75.75 0 0 0 1.5 0M18 10a8 8 0 1 0-16 0a8 8 0 0 0 16 0M3 10a7 7 0 1 1 14 0a7 7 0 0 1-14 0"/>
            </svg>
        </ElementContent>
        
        <TooltipContent>
            @ChildContent
        </TooltipContent>
    </TooltipWrapper>
}

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public EventCallback OnClick { get; set; }
    [Parameter] public TooltipPlacement TooltipPlacement { get; set; } = TooltipPlacement.BottomRight;
}
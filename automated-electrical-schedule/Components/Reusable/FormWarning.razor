<div class="form-warning">
    <div class="form-warning-content">
        <svg class="icon icon-lg" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 20 20">
            <path fill="currentColor" d="M8.681 2.785c.568-1.047 2.071-1.047 2.638 0l6.5 12.002A1.5 1.5 0 0 1 16.502 17H3.498a1.5 1.5 0 0 1-1.319-2.215zM10.5 7.5a.5.5 0 0 0-1 0v4a.5.5 0 0 0 1 0zm.25 6.25a.75.75 0 1 0-1.5 0a.75.75 0 0 0 1.5 0"/>
        </svg>

        <p>@(WarningMessage)</p>
    </div>

    @if (WarningAction.HasDelegate)
    {
        <button type="button" class="btn-text btn-destructive" @onclick="WarningAction">@(WarningActionText)</button>
    }
</div>

@code {
    [Parameter] public string WarningMessage { get; set; } = string.Empty;

    [Parameter] public EventCallback WarningAction { get; set; }
    
    [Parameter] public string WarningActionText { get; set; } = string.Empty;
}